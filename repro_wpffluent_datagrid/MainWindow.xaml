<Window x:Class="repro_wpffluent_datagrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:repro_wpffluent_datagrid"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        ThemeMode="Light">
    <Window.Resources>
        <DataTemplate DataType="{x:Type local:TabViewModel}">
            <local:MyUserControl />
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:AnotherTabViewModel}">
            <local:MyOtherUserControl />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <local:CachedTabControl ItemsSource="{Binding Tabs}">
            <local:CachedTabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Title}"
                                   Style="{DynamicResource TitleLargeTextBlockStyle}" />
                    </StackPanel>
                </DataTemplate>
            </local:CachedTabControl.ItemTemplate>
        </local:CachedTabControl>
    </Grid>
</Window>
